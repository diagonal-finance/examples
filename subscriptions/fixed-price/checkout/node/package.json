{
  "name": "diagonal-backend-examples",
  "version": "1.0.0",
  "description": "Repository containing diagonal backend integration examples",
  "main": "./src/server.ts",
  "author": "Diagonal Finance",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start-ts": "ts-node src/server.ts",
    "start": "node src/server.js",
    "format:check": "prettier --check 'src/**/*.{js,ts}'",
    "format:write": "prettier --write 'src/**/*.{js,ts}'",
    "lint": "eslint ./src/ --ext .ts",
    "lint-check": "npm run format:check && npm run lint"
  },
  "dependencies": {
    "@diagonal-finance/sdk": "^2.0.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.1",
    "nodemon": "^2.0.16"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write --ignore-unknown",
      "eslint"
    ]
  },
  "engines": {
    "node": ">=16.16.0",
    "npm": "8.11.0"
  },
  "volta": {
    "node": "16.16.0",
    "npm": "8.11.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.3.0",
    "@commitlint/config-conventional": "^16.2.4",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.1.5",
    "eslint-plugin-n": "^15.2.0",
    "eslint-plugin-promise": "^6.0.0",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  }
}