{
  "name": "diagonal-merchant-examples",
  "version": "1.0.0",
  "description": "Repository containing example typescript scripts for interacting with the Diagonal backend, for merchants.",
  "main": "index.js",
  "author": "Diagonal Finance",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "handleWebhooks": "ts-node src/examples/1_handling_webhook_events.ts",
    "format:check": "prettier --check 'src/**/*.{js,ts}'",
    "format:write": "prettier --write 'src/**/*.{js,ts}'",
    "lint": "eslint ./src/ --ext .ts",
    "lint-check": "npm run format:check && npm run lint",
    "prepare": "husky install"
  },
  "dependencies": {
    "express": "^4.18.1",
    "cross-fetch": "^3.1.5",
    "dotenv": "^16.0.0",
    "envalid": "^7.3.1",
    "ethers": "^5.6.6",
    "nodemon": "^2.0.16",
    "node-fetch": "3.2.10"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write --ignore-unknown",
      "eslint"
    ]
  },
	"engines": {
		"node": ">=16.16.0",
		"npm": "8.11.0"
	},
	"volta": {
		"node": "16.16.0",
		"npm": "8.11.0"
	},
  "devDependencies": {
    "@commitlint/cli": "^16.3.0",
    "@commitlint/config-conventional": "^16.2.4",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.1.5",
    "eslint-plugin-n": "^15.2.0",
    "eslint-plugin-promise": "^6.0.0",
    "@types/express": "^4.17.13",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4",
    "@types/node-fetch": "^2.6.2"
  }
}
